generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model BorrowedBook {
  id        Int      @id @unique @default(autoincrement())
  idBook    String   @unique
  borrow_at DateTime @default(now())
  return_at String
  status    Boolean  @default(true)
  borrower  String
  imgURL    String
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String
  books Book[]
}

model Book {
  id       Int     @id @default(autoincrement())
  title    String
  authors  String
  userId   Int?
  bookId   String
  category String
  image    String
  stock    Int
  borrowId Int?

  user     User?   @relation(fields: [userId], references: [id])
  borrow   Borrow? @relation(fields: [borrowId], references: [id])

  @@index([userId])
  @@index([borrowId])

}

model Borrow {
  id        Int      @id @default(autoincrement())
  borrow_at DateTime @default(now())
  done_at   DateTime
  books     Book[]
}

model Category {
  id       Int    @id @default(autoincrement())
  category String
}
